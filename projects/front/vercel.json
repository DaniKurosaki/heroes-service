{
	"redirects": [
		{
			"source": "/",
			"has": [
				{
					"type": "header",
					"key": "Accept-Language",
					"value": "(^en.$)"
				}
			],
			"destination": "/en"
		},
		{
			"source": "/en/:path",
			"has": [
				{
					"type": "header",
					"key": "Accept-Language",
					"value": "(^en.$)"
				}
			],
			"destination": "/en/:path"
		},
		{
			"source": "/",
			"has": [
				{
					"type": "header",
					"key": "Accept-Language",
					"value": "(^(?!^en).$)"
				}
			],
			"destination": "/es"
		},
		{
			"source": "/es/:path",
			"has": [
				{
					"type": "header",
					"key": "Accept-Language",
					"value": "(^en.$)"
				}
			],
			"destination": "/es/:path"
		}
	],
	"rewrites": [
		{
			"source": "",
			"destination": "/en"
		},
		{
			"source": "/",
			"destination": "/en"
		},
		{
			"source": "/:path",
			"destination": "/en"
		},
		{
			"source": "/en/:path",
			"has": [
				{
					"type": "header",
					"key": "Accept-Language",
					"value": "(^en.$)"
				}
			],
			"destination": "/en/:path"
		},
		{
			"source": "/es/:path",
			"has": [
				{
					"type": "header",
					"key": "Accept-Language",
					"value": "(^(?!^en).*$)"
				}
			],
			"destination": "/es/:path"
		}
	]
}
